<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/not_send_messsage"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_not_send_message"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/not_send_messsage">
        <ProgressBar
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:id="@+id/p_bar"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chatdoc"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkgray"
        android:visibility="visible"
        android:id="@+id/datetxt"/>

      <TextView
        android:layout_width="wrap_content"
          android:minWidth="200dp"
          android:minHeight="@dimen/dimen_35dp"
        android:layout_height="wrap_content"
        android:id="@+id/chatdoc"
          android:background="@drawable/d_doc_msg_background"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
          android:textAlignment="center"
          android:gravity="center"
          android:textColor="@color/white"
        android:layout_below="@+id/datetxt"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chatdoc"
        android:textSize="10dp"
        android:id="@+id/message_seen"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/darkgray"
        android:layout_marginLeft="15dp"/>

    </RelativeLayout>


</RelativeLayout>